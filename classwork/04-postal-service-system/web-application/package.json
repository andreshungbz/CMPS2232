  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.9",
    "concurrently": "^9.1.2",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2"
  }
}
