{
  "name": "postal-system",
  "version": "1.0.0",
  "description": "Frontend for OOP Postal System",
  "license": "ISC",
  "author": "Andres Hung",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build",
    "build": "npm run clean && tsc && tsc-alias",
