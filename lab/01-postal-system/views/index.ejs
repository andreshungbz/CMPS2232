<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/common-meta') %>
    <title>Postal System</title>
  </head>
  <body>
    <main>
      <%- include('partials/header') %>
      <nav>
        <a href="/package/add">Add Package</a>
      </nav>
      <h2>Packages</h2>
      <ul class="pkg-list">
        <% packages.forEach(pkg => { %>
        <li>
          <% if (pkg.status === 'Delivered') { %>âœ… <% } %>
          <a href="/package/<%= pkg.getTrackingNumber() %>">
            [<%= pkg.getTrackingNumber() %>] [<%= pkg.getShippingMethod() %>]
            <%= pkg.getSenderName() %> to <%= pkg.getReceiverName() %>
          </a>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
